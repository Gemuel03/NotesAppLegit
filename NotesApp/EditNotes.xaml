<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesApp.NoteEditPage">

    <StackLayout
        Margin="0,100,0,0"
        Padding="30">
        
        <Label Text="Edit Note" FontSize="18" HorizontalOptions="CenterAndExpand" Margin="0,10,0,20" />

        <Entry Placeholder="Enter new title..." x:Name="TitleEntry" />
        <Editor Placeholder="Enter new content..." x:Name="ContentEditor" />

        <Button Text="Save" Clicked="OnSaveClicked" HorizontalOptions="CenterAndExpand" VerticalOptions="End" Margin="0,20,0,0" WidthRequest="100"/>
        <Button Text="Delete" Clicked="OnDeleteClicked" HorizontalOptions="CenterAndExpand" VerticalOptions="End" Margin="0,20,0,0" WidthRequest="100"/>
    </StackLayout>

</ContentPage>
