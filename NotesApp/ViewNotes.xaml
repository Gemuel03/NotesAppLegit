<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesApp.NoteViewPage">

    <StackLayout
        Margin="0,100,0,0"
        Padding="30">

        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="25" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20" />

        <Label Text="{Binding Content}" FontSize="15"/>

        <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand">
            <Button Text="Edit" Clicked="OnEditClicked" WidthRequest="150" Margin="0,0,10,20"/>
            <Button Text="Delete" Clicked="OnDeleteClicked" WidthRequest="150" Margin="0,0,0,20"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
